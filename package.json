{
  "name": "kusoogle",
  "version": "1.0.0",
  "private": true,
  "description": "クソアプリ検索エンジン",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter './apps/*' dev",
    "dev:frontend": "bun run --filter './apps/frontend' dev",
    "dev:search": "cd apps/workers/search && bun run dev",
    "dev:data-collection": "cd apps/workers/data-collection && bun run dev",
    "build": "bun run --filter './apps/*' build",
    "build:shared": "bun run --filter './packages/shared' build",
    "test": "bun test",
    "typecheck": "bun run --filter './apps/*' typecheck && bun run --filter './packages/*' typecheck"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.6.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}